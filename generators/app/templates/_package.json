{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "repository": "<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>"
  },
  "main": "server.js",
  "engines": {
    "node": ">=6"
  },
  "bugs": {
    "url": "https://github.com/<%= githubUsername %>/<%= projectName %>/issues"
  },
  "homepage": "https://github.com/<%= githubUsername %>/<%= projectName %>#readme",
  "devDependencies": {
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.13.0",
    "istanbul": "^0.4.4",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.0",
    "watch": "^0.19.1"
  },
  "dependencies": {
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^14.1.0",
    "hapi-pkg": "^1.1.0",
    "hapi-swaggered": "^2.7.0",
    "hapi-swaggered-ui": "^2.4.0",
    "inert": "^4.0.1",
    "vision": "^4.1.0"
  },
  "scripts": {
    "cov": "istanbul cover _mocha -- --reporter list",
    "lint": "eslint lib test server.js",
    "start:dev": "nodemon",
    "test": "mocha --reporter list",
    "tdd": "watch 'clear && npm run -s test' lib test",
    "tdd:lint": "watch 'clear && npm run -s lint && npm run -s test' lib test"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "env": {
      "mocha": true
    },
    "rules": {
      "comma-dangle": 0
    }
  }
}
